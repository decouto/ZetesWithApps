<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.appsolut.composition"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />
    
    <!-- Permissions -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    
    <!-- Features -->
    <uses-feature android:glEsVersion="0x00020000" android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.Sherlock.Light" >
        
        <!-- Login Splash Activity -->
        <activity
            android:name="com.appsolut.composition.SplashLoginActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="stateHidden"
  			android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <!-- Main Activity -->
        <activity
            android:name="com.appsolut.composition.MainActivity"
            android:label="@string/app_name"
  			android:screenOrientation="portrait" >
        </activity>
        
        <!-- New Project Activity -->
        <activity
            android:name="com.appsolut.composition.ProjectNewActivity"
            android:label="@string/app_name"
  			android:screenOrientation="portrait" >
        </activity>
        
        <!-- Location Activity -->
        <activity
            android:name="com.appsolut.composition.LocationActivity"
            android:label="@string/app_name"
  			android:screenOrientation="portrait" >
        </activity>
        
        <!-- Dashboard Activity -->
        <activity
            android:name="com.appsolut.composition.DashboardActivity"
            android:label="@string/app_name"
  			android:screenOrientation="portrait" >
        </activity>
        
        <!-- Settings Activity -->
        <activity
            android:name="com.appsolut.composition.SettingsActivity"
            android:label="@string/app_name"
  			android:screenOrientation="portrait" >
        </activity>
        
        <!-- Project List Activity -->
        <activity
            android:name="com.appsolut.composition.ProjectListActivity"
            android:label="@string/app_name"
  			android:screenOrientation="portrait" >
        </activity>
        
        <!-- Project Overview Activity -->
        <activity
            android:name="com.appsolut.composition.ProjectOverviewActivity"
            android:label="@string/app_name"
  			android:screenOrientation="portrait"
  			android:windowSoftInputMode="stateHidden" >
        </activity>
        
        <!-- Project Record Audio Activity -->
        <activity
            android:name="com.appsolut.composition.ProjectRecordAudioActivity"
            android:label="@string/app_name"
  			android:screenOrientation="portrait" >
        </activity>
        
        <!-- Social Activity -->
        <activity
            android:name="com.appsolut.composition.SocialActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
        </activity>
        
        <!-- MIDI Editor Activity -->
        <activity
            android:name="com.appsolut.composition.MidiEditorActivity"
            android:label="@string/app_name"
  			android:screenOrientation="landscape" >
        </activity>
    </application>

</manifest>