<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@color/white" >
    
    <TextView
        android:id="@+id/tv_location_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:text="Location/Data" />
    
    <TextView
        android:id="@+id/tv_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_gravity="left"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:text="Location" />
    
    <Button
        android:id="@+id/btn_gps_options"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:text="Location Options" />
	    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">
	    
	    <Button
	        android:id="@+id/btn_start_wifi"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginBottom="10dp"
	        android:textColor="@color/black"
	        android:textSize="18sp"
	        android:text="WiFi" />
	    
	    <Button
	        android:id="@+id/btn_start_wifi_gps"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginBottom="10dp"
	        android:textColor="@color/black"
	        android:textSize="18sp"
	        android:text="WiFi &amp; GPS" />
	    
	    <Button
	        android:id="@+id/btn_start_gps"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginBottom="10dp"
	        android:textColor="@color/black"
	        android:textSize="18sp"
	        android:text="GPS" />
    
    </LinearLayout>
    
    <TextView
        android:id="@+id/tv_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_gravity="left"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:text="Location" />
    
    <Button
        android:id="@+id/btn_data_options"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:text="Data Options" />
	    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">
	    
	    <EditText android:id="@+id/et_type"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:hint="type" />
	    
	    <EditText android:id="@+id/et_number"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:hint="#" />
	    
	    <EditText android:id="@+id/et_location"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:hint="location" />
	    
	    <Button
	        android:id="@+id/btn_data_test"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginBottom="10dp"
	        android:textColor="@color/black"
	        android:textSize="18sp"
	        android:text="Test" />
    
    </LinearLayout>
    
</LinearLayout>